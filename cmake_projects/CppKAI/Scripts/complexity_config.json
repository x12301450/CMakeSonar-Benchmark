{
  "warning_threshold": 10,
  "error_threshold": 25,
  "max_function_length": 100,
  "exclude_patterns": [
    "*/Build/*",
    "*/ThirdParty/*",
    "*/External/*",
    "*/Test/*",
    "*/.git/*",
    "*/cmake-build*/*",
    "*/out/*",
    "*/bin/*",
    "*/obj/*"
  ],
  "file_extensions": [".cpp", ".h", ".hpp", ".c", ".cc"],
  "modules": {
    "Core": {
      "warning_threshold": 8,
      "error_threshold": 20
    },
    "Executor": {
      "warning_threshold": 15,
      "error_threshold": 50
    },
    "Language": {
      "warning_threshold": 20,
      "error_threshold": 75
    }
  }
}